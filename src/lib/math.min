;; Factorial
(def factorial (n)
  (cond
   [(negative? n) "undef"]
   [else
    (def loop (n acc)
      (if (zero? n)
          acc
          (loop (- n 1) (* n acc))))
    (loop n 1)]))

(def fibonacci (n)
  (cond 
   [(negative? n) "undef"]
   [(zero? n) 0]
   [else
    (def loop (i x y)
      (if (> i n)
          x
          (loop (+ i 1) (+ x y) x)))
    (loop 1 1 0)]))

;; Functional maps

(def add1 (x)
  (+ x 1))

(def sub1 (x)
  (- x 1))