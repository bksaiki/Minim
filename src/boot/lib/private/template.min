;;; 'syntax'
;;;

(import "and-or.min" "cond.min" "define.min"
        "let.min" "stx.min" "when-unless.min"
        "template-utils.min")

(export syntax)

(define-syntax (syntax stx)
  (define l (syntax->list stx))
  (if (and (list? l) (= (length l) 2))
      (do-template stx (cadr l))
      (syntax-error #f "bad syntax" stx)))
