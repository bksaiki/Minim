;;;   First file loaded by the interpreter
;;;   Need to start somewhere ...
;;;

(define import
  (lambda args
    (if (null? args)
        (void)
        (if (string? (car args))
            (begin
              (load (car args))
              (apply import (cdr args)))
            (error "import: not a file name " (car args))))))

(import "module.min")
