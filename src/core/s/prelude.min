(define-values (record-type-equal-procedure record-type-hash-procedure)
  (letrec-values ([($equal-table) (make-eq-hashtable)]
                  [($hash-table) (make-eq-hashtable)]
                  [(do-table-ref)
                   (lambda (rtd mode)
                     (if (eq? mode 'equal)
