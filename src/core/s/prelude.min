(define-values (put-string)
  (lambda args
    (let-values ([(argc) ($length args)])
      (if (<= 2 argc 4)
          (letrec-values ([(p) ($car args)]
                          [(str) ($cadr args)]
                          [(len) ($string-length str)])
            (if (output-port? p)
                (void)
                (error 'put-string "expected output-port?" ch))
            (if (string? str)
                (void)
                (error 'put-string "expected string?" ch))
            (if (= argc 2)
                ($put-string p str 0 len)
                (let-values ([(start) ($caddr args)])
                  (if (integer? start)
                      (void)
                      (error 'put-string "expected integer?" start))
                  (if (< start len)
                      (if (= argc 3)
                          ($put-string p str start len)
                          (let-values ([(end) ($cadddr args)])
                            (if (integer? end)
                                (void)
                                (error 'put-string "expected integer?" end))
                            (if (< end start)
                                (error 'put-string "must have start <= end" start end)
                                (void))
                            (if (>= end len)
                                (error 'put-string "end index out of bounds" end len)
                                (void))
                            ($put-string p str start end)))
                      (error 'put-string "start index out of bounds" start len)))))
          (error 'put-string "expected 2, 3, or 4 arguments" argc)))))

