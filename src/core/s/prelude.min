(define-values (fasl-read)
  (lambda (port)
    (if (input-port? port)
        ($fasl-read port)
        (error 'fasl-read "expected input-port?" port))))

(define-values (fasl-write)
  (lambda (x port)
    (if (output-port? port)
        ($fasl-write x port)
        (error 'fasl-write "expected output-port?" port))))

